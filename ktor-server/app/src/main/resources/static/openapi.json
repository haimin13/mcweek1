{
  "openapi": "3.0.0",
  "info": {
    "title": "Playlist API",
    "version": "1.0.0",
    "description": "Ktor 기반 플레이리스트 및 노래 API"
  },
  "paths": {
    "/playlists/add": {
      "post": {
        "summary": "플레이리스트 추가",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Playlist"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플리 추가 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "플리 추가 완료"
                }
              }
            }
          }
        }
      }
    },
    "/playlists/list": {
      "get": {
        "summary": "유저의 플레이리스트 목록 조회",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "유저 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["liked", "created", "all"],
              "default": "all"
            },
            "description": "조회 타입"
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 요청"
          }
        }
      }
    },
    "/playlists/recent": {
      "get": {
        "summary": "최근 생성된 플레이리스트 목록 조회",
        "responses": {
          "200": {
            "description": "최신 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          }
        }
      }
    },
    "/playlists/{id}": {
      "get": {
        "summary": "특정 플레이리스트 상세 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "플레이리스트 상세 정보",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Playlist" }
              }
            }
          },
          "404": { "description": "해당 ID 없음" }
        }
      }
    },
    "/songs/{id}": {
      "get": {
        "summary": "노래 상세 정보 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "노래 상세 정보",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Song" }
              }
            }
          },
          "404": { "description": "노래를 찾을 수 없음" }
        }
      }
    },
    "/charts/trending": {
      "get": {
        "summary": "트렌딩 노래/플리 목록 조회",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["song", "playlist"],
              "default": "song"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "트렌딩 노래 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Song" }
                }
              }
            }
          },
          "400": { "description": "잘못된 type 파라미터" },
          "501": { "description": "플레이리스트 트렌딩은 미구현" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Playlist": {
        "type": "object",
        "required": ["id", "title", "author", "createdAt"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "integer" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "songIds": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "visibility": { "type": "integer", "default": 0 },
          "createdAt": { "type": "string", "format": "date-time" },
          "ranking": { "type": "integer", "nullable": true }
        }
      },
      "Song": {
        "type": "object",
        "required": ["id", "title", "artist", "length"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "artist": { "type": "string" },
          "length": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "genres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "includedIn": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "ranking": { "type": "integer", "nullable": true }
        }
      }
    }
  }
}
