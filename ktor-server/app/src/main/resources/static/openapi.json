{
  "openapi": "3.0.0",
  "info": {
    "title": "Playlist API",
    "version": "1.0.0",
    "description": "Ktor 기반 플레이리스트 및 노래 API"
  },
  "paths": {
    "/playlists/add": {
      "post": {
        "summary": "플레이리스트 추가",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Playlist"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플리 추가 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "플리 추가 완료"
                }
              }
            }
          }
        }
      }
    },
    "/playlists/list": {
      "get": {
        "summary": "유저의 플레이리스트 목록 조회",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "유저 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["liked", "created", "all"],
              "default": "all"
            },
            "description": "조회 타입"
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 요청"
          }
        }
      }
    },
    "/playlists/recent": {
      "get": {
        "summary": "최근 생성된 플레이리스트 목록 조회",
        "responses": {
          "200": {
            "description": "최신 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          }
        }
      }
    },
    "/playlists/{id}": {
      "get": {
        "summary": "특정 플레이리스트 상세 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "플레이리스트 상세 정보",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Playlist" }
              }
            }
          },
          "404": { "description": "해당 ID 없음" }
        }
      }
    },
    "/songs/{id}": {
      "get": {
        "summary": "노래 상세 정보 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "노래 상세 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Song"
                }
              }
            }
          },
          "404": {
            "description": "노래를 찾을 수 없음"
          }
        }
      }
    },
    "/charts/friendsfavorite": {
      "get": {
        "summary": "친구들이 좋아요한 콘텐츠 기반 순위 (전체 기간)",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "친구들이 가장 많이 좋아요한 노래 및 플레이리스트",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "songs": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Song" }
                    },
                    "playlists": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Playlist" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/charts/trendingnow": {
      "get": {
        "summary": "최근 3일 내 친구들이 좋아요한 콘텐츠 순위",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "최근 3일간 친구들이 좋아요한 노래 및 플레이리스트",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "songs": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Song" }
                    },
                    "playlists": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Playlist" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/artists/{id}": {
      "get": {
        "summary": "아티스트 상세 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "아티스트 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "아티스트 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Artist"
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 아티스트 ID"
          },
          "404": {
            "description": "해당 ID의 아티스트를 찾을 수 없음"
          }
        }
      }
    },
    "/friends/{id}": {
      "get": {
        "summary": "특정 유저의 친구 목록 조회",
        "description": "유저 ID를 통해 해당 유저의 친구 목록을 조회합니다. type 파라미터로 전체 친구 또는 절친만 필터링할 수 있습니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "조회할 유저의 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "close"],
              "default": "all"
            },
            "description": "친구 조회 타입 (all: 전체 친구, close: 절친만)"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/FriendInfo"
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (유효하지 않은 ID 또는 type 파라미터)"
          },
          "404": {
            "description": "사용자를 찾을 수 없음"
          }
        }
      }
    },
    "/friends/{id}/search": {
      "get": {
        "summary": "친구 검색",
        "description": "특정 유저가 닉네임으로 다른 유저를 검색하고 친구 추가 가능 여부를 확인합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "검색을 요청하는 유저의 ID"
          },
          {
            "name": "targetName",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "검색할 대상 유저의 닉네임"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 검색 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                },
                "examples": {
                  "can_add_friend": {
                    "summary": "친구 추가 가능",
                    "value": {
                      "success": true,
                      "message": "You can add this user as a friend"
                    }
                  },
                  "invalid_requester": {
                    "summary": "요청 유저가 존재하지 않음",
                    "value": {
                      "success": false,
                      "message": "Invalid requester"
                    }
                  },
                  "query_empty": {
                    "summary": "검색 쿼리가 비어있음",
                    "value": {
                      "success": false,
                      "message": "Query is empty"
                    }
                  },
                  "user_not_found": {
                    "summary": "대상 유저를 찾을 수 없음",
                    "value": {
                      "success": false,
                      "message": "User not found"
                    }
                  },
                  "self_add_attempt": {
                    "summary": "자기 자신을 친구로 추가하려는 경우",
                    "value": {
                      "success": false,
                      "message": "You can't add yourself a friend."
                    }
                  },
                  "already_friends": {
                    "summary": "이미 친구인 경우",
                    "value": {
                      "success": false,
                      "message": "Already friends"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/friends/{id}/add": {
      "post": {
        "summary": "친구 추가",
        "description": "특정 유저에게 친구를 추가합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친구를 추가받을 유저의 ID"
          },
          {
            "name": "targetId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친구로 추가할 유저의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 추가 결과",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": ["친구 추가 완료", "친구 추가 실패"]
                    }
                  },
                  "example": {
                    "message": "친구 추가 완료"
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid parameters"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/friends/{id}/close/add/{targetId}": {
      "post": {
        "summary": "친한 친구 추가",
        "description": "특정 유저의 친구 목록에 있는 유저를 친한 친구로 추가합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친한 친구를 추가할 유저의 ID"
          },
          {
            "name": "targetId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친한 친구로 추가할 유저의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "친한 친구 추가 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/friends/{id}/close/remove/{targetId}": {
      "delete": {
        "summary": "친한 친구 삭제",
        "description": "특정 유저의 친한 친구 목록에서 다른 유저를 삭제합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친한 친구를 삭제할 유저의 ID"
          },
          {
            "name": "targetId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "삭제할 친한 친구의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "친한 친구 삭제 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/profile/{id}": {
      "get": {
        "summary": "유저 프로필 조회",
        "description": "특정 유저의 프로필 정보를 조회합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "조회할 유저의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "프로필 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Profile"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "User not found"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/profile/switch": {
      "get": {
        "summary": "모든 유저 ID 목록 조회",
        "description": "시스템에 등록된 모든 유저의 ID 목록을 반환합니다.",
        "responses": {
          "200": {
            "description": "유저 ID 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/profile/{id}/nickname": {
      "put": {
        "summary": "유저 닉네임 변경",
        "description": "특정 유저의 닉네임을 변경합니다. 닉네임은 null, 빈 문자열, 다른 유저와 중복, 글자수 초과일 수 없습니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "닉네임을 변경할 유저의 ID"
          },
          {
            "name": "changedName",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "새로운 닉네임"
          }
        ],
        "responses": {
          "200": {
            "description": "닉네임 수정 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Nickname updated successfully."
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (null, 빈 문자열, 글자수 초과)",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "examples": {
                    "nullOrEmpty": {
                      "summary": "닉네임 null 또는 빈 문자열",
                      "value": "Nickname cannot be null or empty."
                    },
                    "exceedsLength": {
                      "summary": "닉네임 글자수 초과",
                      "value": "Nickname exceeds maximum length."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "User not found"
                }
              }
            }
          },
          "409": {
            "description": "닉네임 중복",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Nickname already exists."
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/profile/{id}/genre": {
      "put": {
        "summary": "유저 선호 장르 변경",
        "description": "특정 유저의 선호 장르를 변경합니다. 쉼표로 구분된 숫자 리스트를 받습니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "선호 장르를 변경할 유저의 ID"
          },
          {
            "name": "genres",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "쉼표로 구분된 장르 ID 목록 (예: '1,2,3'). 비어있으면 선호 장르를 초기화합니다."
          }
        ],
        "responses": {
          "200": {
            "description": "선호 장르 수정 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "examples": {
                    "updated": {
                      "summary": "선호 장르 업데이트 성공",
                      "value": "Liked genres updated successfully."
                    },
                    "cleared": {
                      "summary": "선호 장르 초기화 성공",
                      "value": "Liked genres cleared."
                    }
                  }
                }
              }
            }
          },
          "400": {
