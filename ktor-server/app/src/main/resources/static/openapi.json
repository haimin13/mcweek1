{
  "openapi": "3.0.0",
  "info": {
    "title": "Playlist API",
    "version": "1.0.0",
    "description": "Ktor 기반 플레이리스트 API 문서"
  },
  "paths": {
    "/playlists/add": {
      "post": {
        "summary": "플레이리스트 추가",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Playlist"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플리 추가 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "플리 추가 완료"
                }
              }
            }
          }
        }
      }
    },
    "/playlists/list": {
      "get": {
        "summary": "유저의 플레이리스트 목록 조회",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "유저 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["liked", "created", "all"],
              "default": "all"
            },
            "description": "조회 타입"
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Playlist"
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 요청"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Playlist": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "songIds": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "visibility": { "type": "integer", "default": 0 },
          "createdAt": {
            "type": "string"
          },
          "ranking": { "type": "integer", "nullable": true }
        },
        "required": ["id", "title", "author", "createdAt"]
      }
    }
  }
}
