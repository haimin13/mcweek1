{
  "openapi": "3.0.0",
  "info": {
    "title": "Playlist API",
    "version": "1.0.0",
    "description": "Ktor 기반 플레이리스트 API 문서"
  },
  "paths": {
    "/playlists/add": {
      "post": {
        "summary": "플레이리스트 추가",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Playlist"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플리 추가 완료",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "플리 추가 완료"
                }
              }
            }
          }
        }
      }
    },
    "/playlists/list": {
      "get": {
        "summary": "유저의 플레이리스트 목록 조회",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "유저 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["liked", "created", "all"],
              "default": "all"
            },
            "description": "조회 타입"
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Playlist"
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 요청"
          }
        }
      }
    },
    "/friends/{id}": {
      "get": {
        "summary": "특정 유저의 친구 목록 조회",
        "description": "유저 ID를 통해 해당 유저의 친구 목록을 조회합니다. type 파라미터로 전체 친구 또는 절친만 필터링할 수 있습니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "조회할 유저의 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "close"],
              "default": "all"
            },
            "description": "친구 조회 타입 (all: 전체 친구, close: 절친만)"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/FriendInfo"
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (유효하지 않은 ID 또는 type 파라미터)"
          },
          "404": {
            "description": "사용자를 찾을 수 없음"
          }
        }
      }
    },
    "/friends/{id}/add": {
      "post": {
        "summary": "친구 추가",
        "description": "특정 유저에게 친구를 추가합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친구를 추가받을 유저의 ID"
          },
          {
            "name": "targetId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "친구로 추가할 유저의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 추가 결과",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": ["친구 추가 완료", "친구 추가 실패"]
                    }
                  },
                  "example": {
                    "message": "친구 추가 완료"
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid parameters"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/friends/{id}/search": {
      "get": {
        "summary": "친구 검색",
        "description": "특정 유저가 닉네임으로 다른 유저를 검색하고 친구 추가 가능 여부를 확인합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "검색을 요청하는 유저의 ID"
          },
          {
            "name": "targetName",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "검색할 대상 유저의 닉네임"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 검색 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                },
                "examples": {
                  "can_add_friend": {
                    "summary": "친구 추가 가능",
                    "value": {
                      "success": true,
                      "message": "You can add this user as a friend"
                    }
                  },
                  "invalid_requester": {
                    "summary": "요청 유저가 존재하지 않음",
                    "value": {
                      "success": false,
                      "message": "Invalid requester"
                    }
                  },
                  "query_empty": {
                    "summary": "검색 쿼리가 비어있음",
                    "value": {
                      "success": false,
                      "message": "Query is empty"
                    }
                  },
                  "user_not_found": {
                    "summary": "대상 유저를 찾을 수 없음",
                    "value": {
                      "success": false,
                      "message": "User not found"
                    }
                  },
                  "self_add_attempt": {
                    "summary": "자기 자신을 친구로 추가하려는 경우",
                    "value": {
                      "success": false,
                      "message": "You can't add yourself a friend."
                    }
                  },
                  "already_friends": {
                    "summary": "이미 친구인 경우",
                    "value": {
                      "success": false,
                      "message": "Already friends"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    },
    "/friends/{id}/notifications": {
      "get": {
        "summary": "친구 활동 알림 조회",
        "description": "특정 유저의 친구들이 최근 활동한 로그를 조회합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "알림을 조회할 유저의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "친구 활동 알림 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserLog"
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 파라미터",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid parameters"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "User not found"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error: {error message}"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Playlist": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "songIds": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "visibility": { "type": "integer", "default": 0 },
          "createdAt": {
            "type": "string"
          },
          "ranking": { "type": "integer", "nullable": true }
        },
        "required": ["id", "title", "author", "createdAt"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nickname": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "friends": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "closeFriends": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedGenres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedSongs": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedPlaylists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedArtists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "createdPlaylists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          }
        }
      },
      "FriendInfo": {
        "type": "object",
        "properties": {
          "friendId": {
            "type": "integer",
            "description": "친구의 유저 ID"
          },
          "nickname": {
            "type": "string",
            "description": "친구의 닉네임"
          },
          "thumbnailId": {
            "type": "integer",
            "nullable": true,
            "description": "친구의 프로필 이미지 ID"
          },
          "isCloseFriend": {
            "type": "boolean",
            "description": "절친 여부"
          }
        },
        "required": ["friendId", "nickname", "isCloseFriend"],
        "example": {
          "friendId": 2,
          "nickname": "user3",
          "thumbnailId": 3,
          "isCloseFriend": true
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "검색 성공 여부 (친구 추가 가능 여부)"
          },
          "message": {
            "type": "string",
            "enum": [
              "You can add this user as a friend",
              "Invalid requester",
              "Query is empty",
              "User not found",
              "You can't add yourself a friend.",
              "Already friends"
            ],
            "description": "검색 결과 메시지"
          }
        },
        "required": ["success", "message"],
        "example": {
          "success": true,
          "message": "You can add this user as a friend"
        }
      },
      "UserLog": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer" },
          "userName": { "type": "string" },
          "itemId": { "type": "integer" },
          "itemName": { "type": "string" },
          "itemType": { "type": "string" },
          "likedTime": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "userName", "itemId", "itemName", "itemType", "likedTime"]
      }
    }
  }
}
