{
  "openapi": "3.0.0",
  "info": {
    "title": "Playlist API",
    "version": "1.0.0",
    "description": "Ktor 기반 플레이리스트 및 노래 API"
  },
  "paths": {
    "/playlists/add": {
      "post": {
        "summary": "플레이리스트 추가",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Playlist"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플리 추가 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "플리 추가 완료"
                }
              }
            }
          }
        }
      }
    },
    "/playlists/list": {
      "get": {
        "summary": "유저의 플레이리스트 목록 조회",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "유저 ID"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["liked", "created", "all"],
              "default": "all"
            },
            "description": "조회 타입"
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 요청"
          }
        }
      }
    },
    "/playlists/recent": {
      "get": {
        "summary": "최근 생성된 플레이리스트 목록 조회",
        "responses": {
          "200": {
            "description": "최신 플레이리스트 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Playlist" }
                }
              }
            }
          }
        }
      }
    },
    "/playlists/{id}": {
      "get": {
        "summary": "특정 플레이리스트 상세 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "플레이리스트 상세 정보",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Playlist" }
              }
            }
          },
          "404": { "description": "해당 ID 없음" }
        }
      }
    },
    "/songs/{id}": {
      "get": {
        "summary": "노래 상세 정보 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "노래 상세 정보",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Song" }
              }
            }
          },
          "404": { "description": "노래를 찾을 수 없음" }
        }
      }
    },    
    "/charts/friendsfavorite": {
      "get": {
        "summary": "친구들이 좋아요한 콘텐츠 기반 순위 (전체 기간)",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "친구들이 가장 많이 좋아요한 노래 및 플레이리스트",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "songs": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Song" }
                    },
                    "playlists": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Playlist" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/charts/trendingnow": {
      "get": {
        "summary": "최근 3일 내 친구들이 좋아요한 콘텐츠 순위",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "최근 3일간 친구들이 좋아요한 노래 및 플레이리스트",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "songs": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Song" }
                    },
                    "playlists": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Playlist" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/friendsupdate/{id}": {
      "get": {
        "summary": "친구 활동 로그 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "사용자 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "친구 활동 로그 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserLikeLog"
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 사용자 ID"
          },
          "404": {
            "description": "사용자를 찾을 수 없음"
          }
        }
      }
    },
    "/genres": {
      "get": {
        "summary": "모든 장르 목록 조회",
        "responses": {
          "200": {
            "description": "장르 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Genre"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/artists/{id}": {
      "get": {
        "summary": "아티스트 상세 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "아티스트 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "아티스트 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Artist"
                }
              }
            }
          },
          "400": {
            "description": "유효하지 않은 아티스트 ID"
          },
          "404": {
            "description": "해당 ID의 아티스트를 찾을 수 없음"
          }
        }
      }
    }, 
    "/likes/add": {
      "post": {
        "summary": "사용자가 노래, 플레이리스트, 아티스트에 좋아요를 추가합니다.",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "좋아요를 누른 유저의 ID"
          },
          {
            "name": "itemType",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["song", "playlist", "artist"]
            },
            "description": "좋아요 대상 타입"
          },
          {
            "name": "itemId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "좋아요 대상 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "좋아요 등록 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "좋아요가 성공적으로 추가되었습니다."
                }
              }
            }
          },
          "400": {
            "description": "필수 파라미터 누락 또는 잘못된 타입",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "userId, itemType, itemId는 필수입니다."
                }
              }
            }
          },
          "404": {
            "description": "해당 유저를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "유저를 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    },
    "/likes/remove": {
      "delete": {
        "summary": "사용자가 노래, 플레이리스트, 아티스트에 좋아요를 취소합니다.",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "좋아요를 누른 유저의 ID"
          },
          {
            "name": "itemType",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["song", "playlist", "artist"]
            },
            "description": "좋아요 대상 타입"
          },
          {
            "name": "itemId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "좋아요 대상 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "좋아요 취소 완료",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "좋아요가 성공적으로 취소되었습니다."
                }
              }
            }
          },
          "400": {
            "description": "필수 파라미터 누락 또는 잘못된 타입",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "userId, itemType, itemId는 필수입니다."
                }
              }
            }
          },
          "404": {
            "description": "해당 유저를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "유저를 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Playlist": {
        "type": "object",
        "required": ["id", "title", "author", "createdAt"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "integer" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "songIds": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "visibility": { "type": "integer", "default": 0 },
          "createdAt": { "type": "string", "format": "date-time" },
          "ranking": { "type": "integer", "nullable": true }
        }
      },
      "Song": {
        "type": "object",
        "required": ["id", "title", "artist", "length"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "artist": { "type": "string" },
          "length": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "genres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "includedIn": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "ranking": { "type": "integer", "nullable": true }
        }
      },
      "UserLikeLog": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer"
          },
          "itemType": {
            "type": "string"
          },
          "itemId": {
            "type": "integer"
          },
          "itemName": {
            "type": "string"
          },
          "likedTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Genre": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Artist": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "genreIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "songIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}