  "components": {
    "schemas": {
      "Playlist": {
        "type": "object",
        "required": ["id", "title", "author", "createdAt"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "integer" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "songIds": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "visibility": { "type": "integer", "default": 0 },
          "createdAt": { "type": "string", "format": "date-time" },
          "ranking": { "type": "integer", "nullable": true }
        }
      },
      "Song": {
        "type": "object",
        "required": ["id", "title", "artist", "length"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "artist": { "type": "string" },
          "length": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "genres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedBy": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "includedIn": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "ranking": { "type": "integer", "nullable": true }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nickname": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "friends": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "closeFriends": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedGenres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedSongs": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedPlaylists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedArtists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "createdPlaylists": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          }
        }
      },
      "UserLikeLog": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer"
          },
          "itemType": {
            "type": "string"
          },
          "itemId": {
            "type": "integer"
          },
          "itemName": {
            "type": "string"
          },
          "likedTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Genre": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Artist": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "genreIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "songIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      },
      "FriendInfo": {
        "type": "object",
        "properties": {
          "friendId": {
            "type": "integer",
            "description": "친구의 유저 ID"
          },
          "nickname": {
            "type": "string",
            "description": "친구의 닉네임"
          },
          "thumbnailId": {
            "type": "integer",
            "nullable": true,
            "description": "친구의 프로필 이미지 ID"
          },
          "isCloseFriend": {
            "type": "boolean",
            "description": "절친 여부"
          }
        },
        "required": ["friendId", "nickname", "isCloseFriend"],
        "example": {
          "friendId": 2,
          "nickname": "user3",
          "thumbnailId": 3,
          "isCloseFriend": true
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "검색 성공 여부 (친구 추가 가능 여부)"
          },
          "message": {
            "type": "string",
            "enum": [
              "You can add this user as a friend",
              "Invalid requester",
              "Query is empty",
              "User not found",
              "You can't add yourself a friend.",
              "Already friends"
            ],
            "description": "검색 결과 메시지"
          }
        },
        "required": ["success", "message"],
        "example": {
          "success": true,
          "message": "You can add this user as a friend"
        }
      },
      "ProfileSong": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "artist": { "type": "string" }
        },
        "required": ["id", "title", "artist"]
      },
      "ProfileArtist": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nickname": { "type": "string" }
        },
        "required": ["id", "nickname"]
      },
      "ProfilePlaylist": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" }
        },
        "required": ["id", "title"]
      },
      "Profile": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer" },
          "nickname": { "type": "string" },
          "thumbnailId": { "type": "integer", "nullable": true },
          "likedGenres": {
            "type": "array",
            "items": { "type": "integer" },
            "nullable": true
          },
          "likedSongs": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProfileSong" },
            "nullable": true
          },
          "likedArtists": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProfileArtist" },
            "nullable": true
          },
          "createdPlaylists": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProfilePlaylist" },
            "nullable": true
          }
        },
        "required": ["userId", "nickname"]
      }
    }
  }
